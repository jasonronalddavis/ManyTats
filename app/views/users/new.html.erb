
<h1>Create a new user</h1>

<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <br>
    <%= f.label :admin %>
    <%= f.check_box :admin%>
    <br>
    <%= f.submit "Create User" %>
<% end %>